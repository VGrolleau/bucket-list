{% extends 'base.html.twig' %}

{% block title %}
    {{ wish.title }} | {{ parent() }}
{% endblock %}

{% block body %}
    <div class="detail-wish">
        <h2>Souhait : {{ wish.title }}</h2>
        <div>{{ wish.description }}</div>
        <p class="subtitle">
            Souhaité par {{ wish.author }} le {{ wish.dateCreated|date('d/m/Y') }}
            || Catégorie : {{ wish.category.name }}
        </p>
    </div>
{% endblock %}